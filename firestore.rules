rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
    
    // User metadata - only owner can read/write
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && 
                      request.auth.uid == userId &&
                      request.resource.data.keys().hasAll(['email', 'displayName', 'createdAt']) &&
                      request.resource.data.size() <= 10;
      
      // Encrypted entries - only owner
      match /entries/{entryId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow create: if request.auth != null && 
                         request.auth.uid == userId &&
                         request.resource.data.keys().hasAll(['encryptedData', 'createdAt', 'updatedAt']) &&
                         request.resource.data.encryptedData is string &&
                         request.resource.data.encryptedData.size() <= 100000;
        allow update: if request.auth != null && 
                         request.auth.uid == userId &&
                         request.resource.data.encryptedData is string &&
                         request.resource.data.encryptedData.size() <= 100000;
        allow delete: if request.auth != null && request.auth.uid == userId;
      }
      
      // Encrypted expenses - only owner
      match /expenses/{expenseId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow create: if request.auth != null && 
                         request.auth.uid == userId &&
                         request.resource.data.keys().hasAll(['encryptedData', 'createdAt', 'updatedAt']) &&
                         request.resource.data.encryptedData is string &&
                         request.resource.data.encryptedData.size() <= 50000;
        allow update: if request.auth != null && 
                         request.auth.uid == userId &&
                         request.resource.data.encryptedData is string &&
                         request.resource.data.encryptedData.size() <= 50000;
        allow delete: if request.auth != null && request.auth.uid == userId;
      }
      
      // Encrypted action items - only owner
      match /actionItems/{itemId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow create: if request.auth != null && 
                         request.auth.uid == userId &&
                         request.resource.data.keys().hasAll(['encryptedData', 'createdAt', 'updatedAt']) &&
                         request.resource.data.encryptedData is string &&
                         request.resource.data.encryptedData.size() <= 50000;
        allow update: if request.auth != null && 
                         request.auth.uid == userId &&
                         request.resource.data.encryptedData is string &&
                         request.resource.data.encryptedData.size() <= 50000;
        allow delete: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
